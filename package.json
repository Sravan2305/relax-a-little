{
  "name": "relax-a-little",
  "version": "0.1.1",
  "description": "This extension provides tools to relax like giving reminders to look somewhere else, drink water, walk or do some lunges. Comes with lot of configurations to control time of reminder, interval, water drinking intervals and more",
  "displayName": "Relax a Little",
  "publisher": "open-devs",
  "preview": true,
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "icon": "static/images/relax-a-little-logo.png",
  "main": "dist/extension.js",
  "author": {
    "name": "open devs",
    "email": "open.devs.github@gmail.com",
    "url": "https://opendevs.in"
  },
  "contributors": [
    "Mihir Kumar (mikr13)",
    "Alok Raj (alok722)"
  ],
  "license": "MIT",
  "homepage": "https://github.com/open-devs/relax-a-little",
  "bugs": {
    "url": "https://github.com/open-devs/relax-a-little/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-devs/relax-a-little.git"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "relax",
    "break",
    "water",
    "activity",
    "switch",
    "theme",
    "vscode"
  ],
  "scripts": {
    "dev": "webpack --mode development --progress",
    "build": "webpack --mode production",
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js",
    "package": "vsce package",
    "vscode:prepublish": "webpack --mode production",
    "deploy": "vsce publish -p",
    "commit-a": "git add . && git cz",
    "commit": "git cz",
    "ci": "yarn install --frozen-lockfile"
  },
  "activationEvents": [
    "*"
  ],
  "dependencies": {
    "chroma-js": "^2.1.0",
    "json5": "^2.2.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^2.0.0",
    "eslint": "^7.20.0",
    "git-cz": "^4.7.6",
    "glob": "^7.1.6",
    "mocha": "^8.3.0",
    "vsce": "^1.85.0",
    "vscode": "^1.1.37",
    "vscode-test": "^1.5.0",
    "clean-webpack-plugin": "^3.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "contributes": {
    "commands": [{
        "command": "relaxALittle.enableExtension",
        "title": "relax-a-little: Enable extension"
      },
      {
        "command": "relaxALittle.disableExtension",
        "title": "relax-a-little: Disable extension"
      },
      {
        "command": "relaxALittle.enableWinddown",
        "title": "relax-a-little: Enable Winddown"
      },
      {
        "command": "relaxALittle.disableWinddown",
        "title": "relax-a-little: Disable Winddown"
      },
      {
        "command": "relaxALittle.enableWaterBreak",
        "title": "relax-a-little: Enable Water Break"
      },
      {
        "command": "relaxALittle.disableWaterBreak",
        "title": "relax-a-little: Disable Water Break"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Relax a Little",
      "properties": {
        "relaxALittle.minutesTillBreak": {
          "minimum": 10,
          "type": "number",
          "default": 25,
          "description": "Time in minutes until theme colors start fading out."
        },
        "relaxALittle.winddownDurationMinutes": {
          "minimum": 3,
          "type": "number",
          "default": 3,
          "description": "Time in minutes until theme colors have fully faded out."
        },
        "relaxALittle.breakDurationMinutes": {
          "minimum": 1,
          "type": "number",
          "default": 3,
          "description": "Time in minutes until theme colors are reset to normal."
        },
        "relaxALittle.winddownFramesPerMinute": {
          "type": "number",
          "minimum": 1,
          "default": 6,
          "maximum": 60,
          "description": "Color update frequency during winddown phase. Usually you do not need to change this. Lower it if you are distracted by screen flashes, increase it for smoother color transitions. Must be between 1 and 60."
        },
        "relaxALittle.minutesTillWaterBreak": {
          "minimum": 10,
          "type": "number",
          "default": 15,
          "description": "Time in minutes until water break."
        },
        "relaxALittle.enableBlockingNotification": {
          "type": "boolean",
          "default": true,
          "description": "Do you want blocking notifications from time to time? Turn this off if you prefer text in bottom bar only."
        }
      }
    }
  }
}